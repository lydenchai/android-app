<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Left Border -->
    <item android:right="100dp">
        <shape>
            <solid android:color="#000000" /> <!-- Left border color -->
            <size android:width="2dp" /> <!-- Left border thickness -->
        </shape>
    </item>

    <!-- Right Border -->
    <item android:left="100dp">
        <shape>
            <solid android:color="#000000" />
            <size android:width="2dp" /> <!-- Right border thickness -->
        </shape>
    </item>

</layer-list>
